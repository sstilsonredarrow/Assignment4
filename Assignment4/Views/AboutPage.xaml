<?xml version="1.0" encoding="utf-8"?>
<views:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Assignment4.Views.AboutPage" 
              xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms" 
             Title="{Binding Title}">
    <ContentPage.Content>
        <ListView x:Name="PlaceList" HasUnevenRows="True" 
                  ItemsSource="{Binding Places}" RowHeight="120" SelectedItem="{Binding SelectedItem}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding PlaceName}" VerticalOptions="Center" FontSize="Small" WidthRequest="100" />
                            <Image Source="{Binding IconUrl}" WidthRequest="120" HeightRequest="120" />
                            <Label Text="{Binding Address}" FontSize="Small" TextColor="Gray" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</views:MvxContentPage>